Algoritmo "primeiro"

Var
nome: caracter
senha: inteiro
opcao: inteiro
saldo: inteiro
emprestimo: inteiro
Inicio
saldo <- 15320
emprestimo <- 50000
escreval ("------ Menu Banco Visualg Sal ------")

escreval ("Qual é o seu nome?")
         leia (nome)
repita
      escreval ("Digite sua senha correta.")
      leia (senha)
      ate senha = 123456
      
      se senha = 123456 entao
         repita
               escreval ("------Seja Bem-vindo ", nome, "------")
               escreval ("1-Ver saldo.")
               escreval ("2-Ver empréstimo.")
               escreval ("3-Sair da sessão.")
                  leia (opcao)
         
                    escolha opcao
                         caso 1
                             escreval ("Seu saldo atual é de: ", saldo)
                         caso 2
                             escreval ("Seu empréstimo é de até: ", emprestimo)
                         caso 3
                              escreval ("Até mais. . .")
                         outrocaso
                                  escreval ("Escolha uma opção válida!")
                    fimescolha
      ate opcao = 3

fimse

Fimalgoritmo
